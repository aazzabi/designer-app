                    <div class="col-md-2 text-right">
                        {% if is_granted('ROLE_CLIENT') %}
                            <button id="toggleEdit" class="btn btn-warning btn-lg">Edit</button>
                        {% endif %}
                    </div>
                </div><br><br>
                <div class="row">
                    <div class="col-md-8">
                        <img id="image" src="{{ asset('/folders/images/'~ image.imageName) }}" width="90%"
                             height="60%"/><br/>
                    </div>

                    <div class="col-md-4">
                        {% for c in comts %}
                            <div class="card">
                                <div class="card-body">
                                    <h5>
                                        <i class="fa fa-map-marker text-left" style="padding: 0 auto">
                                            #{{ loop.index }}</i>
                                        {{ c.note }}
                                    </h5>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>

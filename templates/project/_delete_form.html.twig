<form method="post" action="{{ path('project_delete', {'id': project.id}) }}"
      onsubmit="return confirm('Voulez vous vraiement supprimer ce projet ??');">
    <input type="hidden" name="_method" value="Supprimer">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ project.id) }}">
    <button class="btn btn-sm btn-danger"> <i class="fa fa-trash"></i> Supprimer</button>
</form>
